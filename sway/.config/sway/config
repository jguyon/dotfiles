# Read `man 5 sway` for a complete reference.

# Use super key as modifier
set $mod Mod4

# Preferred terminal emulator
set $term alacritty
set $browser qutebrowser

# Font for UI elements
set $font Iosevka Aile 11

# Dracula theme
# https://github.com/dracula/dracula-theme
set $background #282a36
set $selection #44475a
set $foreground #f8f8f2
set $comment #6272a4
set $cyan #8be9fd
set $green #50fa7b
set $orange #ffb86c
set $pink #ff79c6
set $purple #bd93f9
set $red #ff5555
set $yellow #f1fa8c

# Keyboard layout
input type:keyboard {
    xkb_layout us
    xkb_variant altgr-intl
}

# Wallpaper
output * bg ~/.config/sway/background.jpg fill

# Screen locker
exec --no-startup-id swayidle -w \
    timeout 270 'swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"' \
    timeout 300 'swaylock -f' \
    timeout 900 'systemctl suspend' \
    before-sleep 'swaylock -f' \
    lock 'swaylock -f'

# Don't lock the screen when fullscreen
for_window [class="."] inhibit_idle fullscreen
for_window [app_id="."] inhibit_idle fullscreen

# Notification tool
exec --no-startup-id mako

# Invoke default action for notification
bindsym $mod+i exec --no-startup-id makoctl invoke

# Dismiss notification
bindsym $mod+Shift+i exec --no-startup-id makoctl dismiss

# Reload the configuration file
bindsym $mod+Shift+c reload

# Use Mouse+$mod to drag windows
floating_modifier $mod

# Start a terminal
bindsym $mod+Return exec $term

# Start a browser
bindsym $mod+Shift+Return exec $browser

# Launch an application
bindsym $mod+space exec j4-dmenu-desktop --term=$term --dmenu="bemenu -i -p Launch -n --fn '$font' --tb=$background --tf=$pink --fb=$background --ff=$foreground --nb=$background --nf=$foreground --sb=$pink --sf=$background --hb=$background --hf=$pink"

# Kill focused window
bindsym $mod+Shift+q kill

# Change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Resize focused window
mode "resize" {
    # Shrink width
    bindsym h resize shrink width
    # Grow height
    bindsym j resize grow height
    # Shrink height
    bindsym k resize shrink height
    # Grow width
    bindsym l resize grow width

    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Split in horizontal orientation
bindsym $mod+b split h

# Split in vertical orientation
bindsym $mod+v split v

# Toggle fullscreen mode for the focused window
bindsym $mod+f fullscreen toggle

# Toggle floating mode for the focused window
bindsym $mod+Shift+f floating toggle

# Swap focus between the tiling area and the floating area
bindsym $mod+g focus mode_toggle

# Change container layout
bindsym $mod+e layout toggle splith splitv tabbed stacking
bindsym $mod+Shift+e layout toggle stacking tabbed splitv splith

# Focus the parent container
bindsym $mod+u focus parent

# Focus the child container
bindsym $mod+d focus child

# Switch to workspace
bindsym $mod+n workspace next_on_output
bindsym $mod+p workspace prev_on_output
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# Move focused container to workspace
bindsym $mod+Shift+n move container to workspace next_on_output
bindsym $mod+Shift+p move container to workspace prev_on_output
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# Move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show

# Control the session/system
mode "off" {
    # Exit the session
    bindsym e exec --no-startup-id "swaymsg exit", mode "default"
    # Lock the session
    bindsym l exec --no-startup-id "loginctl lock-session", mode "default"
    # Reboot the computer
    bindsym r exec --no-startup-id "systemctl reboot", mode "default"
    # Power off the computer
    bindsym p exec --no-startup-id "systemctl poweroff", mode "default"
    # Suspend the computer
    bindsym s exec --no-startup-id "systemctl suspend", mode "default"

    bindsym Escape mode "default"
}
bindsym $mod+Escape mode "off"

# Send signal to i3blocks to update volume block
set $update-status-volume exec --no-startup-id pkill -SIGRTMIN+10 i3blocks
# Control the audio
mode "audio" {
    # Volume down
    bindsym j exec --no-startup-id amixer -q -D pulse sset Master 5%- unmute, $update-status-volume
    # Volume up
    bindsym k exec --no-startup-id amixer -q -D pulse sset Master 5%+ unmute, $update-status-volume
    # Mute
    bindsym m exec --no-startup-id amixer -q -D pulse sset Master toggle, $update-status-volume

    bindsym Escape mode "default"
}
bindsym $mod+a mode "audio"

title_align center
default_border pixel 2
default_floating_border pixel 2
gaps inner 20

font pango:$font

client.focused $cyan $cyan $background $cyan $cyan
client.focused_inactive $selection $selection $foreground $selection $selection
client.unfocused $background $background $comment $background $background
client.placeholder $background $background $comment $background $background
client.urgent $red $red $background $red $red
client.background $background

# Status bar
# Read `man 5 sway-bar` for more information about this section.
bar {
    status_command i3blocks
    position top
    separator_symbol " Â« "

    colors {
        background $background
        statusline $foreground
        separator $comment
        focused_workspace $cyan $cyan $background
        active_workspace $selection $selection $foreground
        inactive_workspace $background $background $comment
        urgent_workspace $red $red $background
    }
}
